ControlMaster auto
ControlPath ~/.ssh/sockets/%r@%h:%p
ControlPersist yes

Host *
  ServerAliveInterval 60

Host banco_dev
  HostName 127.0.0.1
  User vagrant
  Port 2222
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /Users/joe/.rvm/gems/ruby-1.9.2-p290@banco-dev-environment/gems/vagrant-0.8.7/keys/vagrant
  IdentitiesOnly yes

Host *.test.firstbanco.com
  IdentityFile ~/.ssh/id_rsa_bancobot
  User bancobot

Host bastion.*.bancodev.org
  User bancobot
  IdentityFile ~/.ssh/id_rsa_bancobot
  ForwardAgent yes

Host *.compute.amazonaws.com
  IdentityFile ~/.ssh/id_rsa_bancobot
  User bancobot

Host *.compute.amazonaws.com
  IdentityFile ~/.ssh/banco-ec2-non-prod.pem
  User ec2-user
